{
	"name": "ewiv",
	"displayName": "ewiv",
	"description": "edit mediawiki in VSCode",
	"version": "0.0.2",
	"publisher": "xwbx",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.ewivpush",
		"onCommand:extension.ewivinit"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "edit mediaWiki in VSCode",
			"properties": {
				"ewiv.indexUrl":{
					"type": "string",
					"default": "fgo.wiki/index.php",
					"description": "index.php"
				},
				"ewiv.apiUrl": {
					"type": "string",
					"default": "fgo.wiki/api.php",
					"description": "api.php"
				},
				"ewiv.userName": {
					"type": "string",
					"description": "wiki的用户名"
				},
				"ewiv.password": {
					"type": "string",
					"description": "wiki的登录密码"
				},
				"ewiv.pageName": {
					"type": "string",
					"description": "编辑的页面"
				},
				"ewiv.summary": {
					"type": "string",
					"default": "edit in vscode",
					"description": "编辑摘要"
				}
			}
		},
		"commands": [
			{
				"command": "extension.ewivpush",
				"title": "push"
			},
			{
				"command": "extension.ewivinit",
				"title": "load page"
			}
		],
		"languages": [
			{
				"id": "wikitext",
				"extensions": [
					".mw",
					".wikitext"
				],
				"aliases": [
					"wikitext"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "wikitext",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "wikitext",
				"path": "./snippets/Variables.json"
			}
		],
		"grammars": [
			{
				"language": "wikitext",
				"scopeName": "source.wikitext",
				"path": "./syntaxes/wikitext.tmLanguage.json"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/daflyinbed/ewiv"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"mwbot": "^1.0.10"
	},
	"dependencies": {
		"mwbot": "^1.0.10"
	}
}
